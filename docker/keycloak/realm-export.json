  ],
  "scopeMappings": [],
  "clientScopeMappings": {},
  "roles": {
    "realm": [],
    "client": {}
  },
  "groups": [],
  "defaultDefaultClientScopes": ["role_list", "profile", "email", "web-origins", "acr"],
  "defaultOptionalClientScopes": ["offline_access", "address", "phone"]
}
